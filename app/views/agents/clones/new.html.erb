<div class="dashboard">
  <div class="dashboard-header">
    <div class="breadcrumb">
      <%= link_to "Agents", agents_path %> <span class="breadcrumb-sep">/</span> <%= link_to @agent.name, agent_path(@agent) %> <span class="breadcrumb-sep">/</span> <span>Clone</span>
    </div>
  </div>

  <div class="agent-detail">
    <%= form_with url: agent_clone_path(@agent), method: :post, data: { turbo_frame: "_top" } do |form| %>
      <div class="form-group">
        <label for="name">Name</label>
        <%= text_field_tag :name, "Copy of #{@agent.name}" %>
      </div>

      <div class="form-group">
        <label class="checkbox-label">
          <%= check_box_tag :include_memories, "1", false %> Include memories
        </label>
      </div>

      <div class="form-actions-inline">
        <%= form.submit "Clone Agent", class: "btn btn-primary btn-sm" %>
        <%= link_to "Cancel", agent_path(@agent), class: "btn btn-ghost btn-sm" %>
      </div>
    <% end %>
  </div>
</div>
