<div class="dashboard">
  <div class="dashboard-header">
    <h1>Skills</h1>
    <div class="dashboard-actions">
      <%= link_to new_skill_path, class: "btn btn-primary btn-icon", aria: { label: "New skill" } do %>
        <svg width="18" height="18" viewBox="0 0 18 18" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round"><line x1="9" y1="4" x2="9" y2="14"/><line x1="4" y1="9" x2="14" y2="9"/></svg>
      <% end %>
    </div>
  </div>

  <% if @skills.any? %>
    <div class="skills-list">
      <% @skills.each do |skill| %>
        <%= link_to skill_path(skill), class: "skill-card" do %>
          <div class="skill-card-header">
            <h3 class="skill-name"><%= skill.name %></h3>
          </div>
          <% if skill.description.present? %>
            <p class="skill-description"><%= truncate(skill.description, length: 120) %></p>
          <% end %>
        <% end %>
      <% end %>
    </div>
  <% else %>
    <div class="empty-state">
      <h2>No skills yet</h2>
      <p>Create your first skill to extend your agents' capabilities.</p>
    </div>
  <% end %>
</div>
