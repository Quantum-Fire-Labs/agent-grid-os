<div class="dashboard">
  <div class="dashboard-header">
    <div class="breadcrumb">
      <%= link_to "Skills", skills_path %> <span class="breadcrumb-sep">/</span> <span>New skill</span>
    </div>
  </div>

  <div class="form-card">
    <div class="form-card-header">
      <h1>Create a new skill</h1>
      <p class="form-card-subtitle">Skills extend what your agents can do.</p>
    </div>

    <% if @skill.errors.any? %>
      <div class="flash flash-alert">
        <%= @skill.errors.full_messages.to_sentence %>
      </div>
    <% end %>

    <%= form_with model: @skill, class: "form-body" do |form| %>
      <div class="form-group">
        <%= form.label :name %>
        <%= form.text_field :name, required: true, autofocus: true, placeholder: "e.g. web-search, code-review" %>
      </div>

      <div class="form-group">
        <%= form.label :description %>
        <%= form.text_field :description, placeholder: "Brief description of what this skill does" %>
      </div>

      <div class="form-group">
        <%= form.label :body, "Instructions" %>
        <%= form.text_area :body, rows: 8, placeholder: "Skill instructions injected into the agent's prompt..." %>
      </div>

      <div class="form-actions">
        <%= form.submit "Create skill", class: "btn btn-primary" %>
        <%= link_to "Cancel", skills_path, class: "btn btn-ghost" %>
      </div>
    <% end %>
  </div>
</div>
