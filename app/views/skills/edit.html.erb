<div class="dashboard">
  <div class="dashboard-header">
    <div class="breadcrumb">
      <%= link_to "Skills", skills_path %> <span class="breadcrumb-sep">/</span> <span><%= @skill.name %></span>
    </div>
  </div>

  <%= turbo_frame_tag @skill do %>
    <div class="agent-detail">
      <% if @skill.errors.any? %>
        <div class="flash flash-alert">
          <%= @skill.errors.full_messages.to_sentence %>
        </div>
      <% end %>

      <%= form_with model: @skill do |form| %>
        <div class="form-group">
          <%= form.label :name %>
          <%= form.text_field :name, required: true %>
        </div>

        <div class="form-group">
          <%= form.label :description %>
          <%= form.text_field :description %>
        </div>

        <div class="form-group">
          <%= form.label :body, "Instructions" %>
          <%= form.text_area :body, rows: 8 %>
        </div>

        <div class="form-actions-inline">
          <%= form.submit "Save", class: "btn btn-primary btn-sm" %>
          <%= link_to "Cancel", skill_path(@skill), class: "btn btn-ghost btn-sm" %>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
