<div class="dashboard">
  <div class="dashboard-header">
    <h1>Plugins</h1>
    <div class="dashboard-actions">
      <%= link_to new_plugin_path, class: "btn btn-primary btn-icon", aria: { label: "Install plugin" } do %>
        <svg width="18" height="18" viewBox="0 0 18 18" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round"><line x1="9" y1="4" x2="9" y2="14"/><line x1="4" y1="9" x2="14" y2="9"/></svg>
      <% end %>
    </div>
  </div>

  <% if @plugins.any? %>
    <div class="skills-list">
      <% @plugins.each do |plugin| %>
        <%= link_to plugin_path(plugin), class: "skill-card" do %>
          <div class="skill-card-header">
            <h3 class="skill-name"><%= plugin.name %></h3>
            <span class="badge"><%= plugin.plugin_type %></span>
          </div>
          <% if plugin.description.present? %>
            <p class="skill-description"><%= truncate(plugin.description, length: 120) %></p>
          <% end %>
          <div class="agent-detail-meta">
            <div class="meta-item">
              <span class="meta-label">Version</span>
              <span class="meta-value"><%= plugin.version %></span>
            </div>
            <div class="meta-item">
              <span class="meta-label">Agents</span>
              <span class="meta-value"><%= plugin.agents.count %></span>
            </div>
            <div class="meta-item">
              <span class="meta-label">Execution</span>
              <span class="meta-value"><%= plugin.execution %></span>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  <% else %>
    <div class="empty-state">
      <h2>No plugins installed</h2>
      <p>Install your first plugin to extend your agents with tools and channels.</p>
    </div>
  <% end %>
</div>
