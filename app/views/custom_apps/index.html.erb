<div class="dashboard">
  <div class="dashboard-header">
    <h1>Apps</h1>
  </div>

  <% if @custom_apps.any? %>
    <div class="apps-grid">
      <% @custom_apps.each do |app| %>
        <div class="app-card">
          <%= link_to custom_app_path(app), class: "app-card-link" do %>
            <div class="app-card-icon">
              <% if app.icon_display == :image %>
                <%= image_tag app.icon_image, class: "app-card-icon-img" %>
              <% elsif app.icon_display == :emoji %>
                <span class="app-card-icon-emoji"><%= app.icon_emoji %></span>
              <% else %>
                <span class="app-card-icon-initial"><%= app.name.first.upcase %></span>
              <% end %>
            </div>
            <div class="app-card-body">
              <h3 class="app-card-name"><%= app.name %></h3>
              <% if app.description.present? %>
                <p class="app-card-description"><%= truncate(app.description, length: 120) %></p>
              <% end %>
            </div>
          <% end %>
          <div class="app-card-footer">
            <span class="app-card-agent"><%= app.agent.name %></span>
            <% if Current.user.admin? %>
              <%= link_to custom_app_settings_path(app), class: "app-card-settings" do %>
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="3"/><path d="M19.4 15a1.65 1.65 0 0 0 .33 1.82l.06.06a2 2 0 0 1 0 2.83 2 2 0 0 1-2.83 0l-.06-.06a1.65 1.65 0 0 0-1.82-.33 1.65 1.65 0 0 0-1 1.51V21a2 2 0 0 1-2 2 2 2 0 0 1-2-2v-.09A1.65 1.65 0 0 0 9 19.4a1.65 1.65 0 0 0-1.82.33l-.06.06a2 2 0 0 1-2.83 0 2 2 0 0 1 0-2.83l.06-.06A1.65 1.65 0 0 0 4.68 15a1.65 1.65 0 0 0-1.51-1H3a2 2 0 0 1-2-2 2 2 0 0 1 2-2h.09A1.65 1.65 0 0 0 4.6 9a1.65 1.65 0 0 0-.33-1.82l-.06-.06a2 2 0 0 1 0-2.83 2 2 0 0 1 2.83 0l.06.06A1.65 1.65 0 0 0 9 4.68a1.65 1.65 0 0 0 1-1.51V3a2 2 0 0 1 2-2 2 2 0 0 1 2 2v.09a1.65 1.65 0 0 0 1 1.51 1.65 1.65 0 0 0 1.82-.33l.06-.06a2 2 0 0 1 2.83 0 2 2 0 0 1 0 2.83l-.06.06A1.65 1.65 0 0 0 19.4 9a1.65 1.65 0 0 0 1.51 1H21a2 2 0 0 1 2 2 2 2 0 0 1-2 2h-.09a1.65 1.65 0 0 0-1.51 1z"/></svg>
              <% end %>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="empty-state">
      <h2>No apps yet</h2>
      <p>Apps will appear here when your agents build and register them.</p>
    </div>
  <% end %>
</div>
