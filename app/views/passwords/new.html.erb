<div class="auth-wrapper">
  <div class="auth-card">
    <div class="auth-header">
      <div class="auth-logo">The Grid</div>
      <h1 class="auth-title">Forgot your password?</h1>
      <p class="auth-subtitle">We'll send you reset instructions</p>
    </div>

    <% if flash[:alert] %>
      <div class="flash flash-alert"><%= flash[:alert] %></div>
    <% end %>

    <%= form_with url: passwords_path, class: "auth-form" do |form| %>
      <div class="form-group">
        <%= form.label :email_address %>
        <%= form.email_field :email_address, required: true, autofocus: true, autocomplete: "username", placeholder: "you@example.com", value: params[:email_address] %>
      </div>

      <div class="form-actions">
        <%= form.submit "Send reset instructions", class: "btn btn-primary btn-full" %>
      </div>
    <% end %>

    <div class="auth-footer">
      <%= link_to "Back to sign in", new_session_path %>
    </div>
  </div>
</div>
