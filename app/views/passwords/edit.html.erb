<div class="auth-wrapper">
  <div class="auth-card">
    <div class="auth-header">
      <div class="auth-logo">The Grid</div>
      <h1 class="auth-title">Update your password</h1>
      <p class="auth-subtitle">Choose a new password for your account</p>
    </div>

    <% if flash[:alert] %>
      <div class="flash flash-alert"><%= flash[:alert] %></div>
    <% end %>

    <%= form_with url: password_path(params[:token]), method: :put, class: "auth-form" do |form| %>
      <div class="form-group">
        <%= form.label :password, "New password" %>
        <%= form.password_field :password, required: true, autofocus: true, autocomplete: "new-password", placeholder: "Enter new password", maxlength: 72 %>
      </div>

      <div class="form-group">
        <%= form.label :password_confirmation, "Confirm password" %>
        <%= form.password_field :password_confirmation, required: true, autocomplete: "new-password", placeholder: "Confirm new password", maxlength: 72 %>
      </div>

      <div class="form-actions">
        <%= form.submit "Update password", class: "btn btn-primary btn-full" %>
      </div>
    <% end %>

    <div class="auth-footer">
      <%= link_to "Back to sign in", new_session_path %>
    </div>
  </div>
</div>
