<%= render "settings/layout" do %>
  <div class="settings-section">
    <h2 class="settings-section-title">Profile</h2>

    <%= form_with model: Current.user, url: settings_profile_path, method: :patch, class: "settings-form", data: { turbo_frame: "_top" } do |form| %>
      <div class="form-row">
        <div class="form-group">
          <%= form.label :first_name %>
          <%= form.text_field :first_name, required: true %>
        </div>
        <div class="form-group">
          <%= form.label :last_name %>
          <%= form.text_field :last_name, required: true %>
        </div>
      </div>

      <div class="form-group">
        <%= form.label :email_address %>
        <%= form.email_field :email_address, required: true %>
      </div>

      <div class="form-group">
        <%= form.label :time_zone %>
        <%= form.time_zone_select :time_zone, nil, {}, { class: "form-select" } %>
      </div>

      <div class="form-actions-inline">
        <%= form.submit "Update profile", class: "btn btn-primary btn-sm" %>
      </div>
    <% end %>
  </div>

  <div class="settings-section">
    <%= button_to "Sign out", session_path, method: :delete, class: "btn btn-ghost" %>
  </div>
<% end %>
