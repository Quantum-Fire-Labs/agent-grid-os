<%= render "settings/layout" do %>
  <div class="settings-section settings-section-wide">
    <h2 class="settings-section-title">Add user</h2>

    <%= form_with model: @user, url: settings_users_path, class: "settings-form", data: { turbo_frame: "_top" } do |form| %>
      <% if @user.errors.any? %>
        <div class="form-errors">
          <% @user.errors.full_messages.each do |message| %>
            <p><%= message %></p>
          <% end %>
        </div>
      <% end %>

      <div class="form-row">
        <div class="form-group">
          <%= form.label :first_name %>
          <%= form.text_field :first_name, required: true, placeholder: "First name" %>
        </div>
        <div class="form-group">
          <%= form.label :last_name %>
          <%= form.text_field :last_name, required: true, placeholder: "Last name" %>
        </div>
      </div>

      <div class="form-row">
        <div class="form-group">
          <%= form.label :email_address %>
          <%= form.email_field :email_address, required: true, placeholder: "user@example.com" %>
        </div>
        <div class="form-group">
          <%= form.label :role %>
          <%= form.select :role, User.roles.keys.map { |r| [r.capitalize, r] }, {}, { class: "form-select" } %>
        </div>
      </div>

      <div class="form-divider"></div>

      <div class="form-group">
        <%= form.label :password %>
        <%= form.password_field :password, required: true, placeholder: "Minimum 8 characters" %>
      </div>

      <div class="form-group">
        <%= form.label :password_confirmation %>
        <%= form.password_field :password_confirmation, required: true %>
      </div>

      <div class="form-actions-inline">
        <%= form.submit "Add user", class: "btn btn-primary btn-sm" %>
        <%= link_to "Cancel", settings_users_path, class: "btn btn-ghost btn-sm" %>
      </div>
    <% end %>
  </div>
<% end %>
